<resources>

    <!-- This default style is applied to TextViews-->
    <style name="default_text" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans</item>
    </style>

    <!-- This default bold style is applied to TextViews with bold text-->
    <style name="default_bold_text" parent="default_text">
        <item name="android:textStyle">bold</item>
    </style>

    <!-- This style is applied to Edit Texts with left drawable and white text box-->
    <style name="default_edit_text" parent="Base.Widget.AppCompat.EditText">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textColorHint">@color/text_hint_color</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <!-- This style is applied to Edit Texts with left drawable and white text box-->
    <style name="default_button" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
